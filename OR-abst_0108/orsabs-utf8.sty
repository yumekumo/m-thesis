%%% Title %%%
%%% original from article.sty of LaTeX 209 
\def\maketitle{\par
 \begingroup
 \def\thefootnote{\fnsymbol{footnote}}
 \def\@makefnmark{\hbox{$^{\@thefnmark}$\hss}}
 \if@twocolumn 
 \twocolumn[\@maketitle] 
 \else \newpage
%
% suppress page number 
%
% \global\@topnum\z@ \@maketitle \fi\thispagestyle{plain}\@thanks %original
 \global\@topnum\z@ \@maketitle \fi\thispagestyle{empty}\@thanks
 \endgroup
 \setcounter{footnote}{0}
 \let\maketitle\relax
 \let\@maketitle\relax
 \gdef\@thanks{}\gdef\@author{}\gdef\@title{}\let\thanks\relax}

\def\@maketitle{%
  \newpage
  \null
  \begin{center}%
  \let \footnote \thanks
    {\LARGE \bf \@title \par}%
    \vskip 10pt
    {\normalsize \@author \par}%
    \vskip 5pt
  \end{center}%
  \par
  \vskip 0.5em 
}

